{
    "apps": {
        "name": "node-blog",
        "script": "bin/www", //程序入口文件
        "watch": true, //实现对文件内容改动的监听，一旦有改变会自动重启
        "ignore_watch": [
            // 忽略监听变化的文件夹
            "node_modules",
            "logs",
            "logs-pm2"
        ],
        // "instances": 4, //服务器的内核数量，充分利用服务器的内核，实现多线程
        "error_file": "logs-pm2/err.log", // 错误日志
        "out_file": "logs-pm2/out.log", //输出日志
        "log_date_formate": "YYYY-MM-DD HH:mm:ss" //记录日志时间
    }
}
